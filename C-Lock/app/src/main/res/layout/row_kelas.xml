<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="@drawable/itu"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeListRiw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itu"
        android:paddingStart="15dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/txtBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginEnd="20dp"
            android:hint="~none~"
            android:text="ID Booking"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtRuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBook"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Ruangan"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRuang"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:hint="Nama Rumah Sakit"
            android:text="Jadwal"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnBuka"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:layout_below="@+id/txtJadwal"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="#03f8fc"
            android:text="BUKA"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnTutup"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:layout_below="@+id/txtJadwal"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/btnBuka"
            android:layout_toRightOf="@+id/btnBuka"
            android:background="#03f8fc"
            android:text="TUTUP"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>